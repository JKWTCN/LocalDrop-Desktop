                                SelectionMode="None"
                                Width="300"
                                Height="400">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Button HorizontalContentAlignment="Stretch"
                                          Click="HistoryItem_Click">
                                        <StackPanel>
                                            <TextBlock Text="{Binding FileName}" 
                                                     FontWeight="Bold"
                                                     TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding FilePath}" 
                                                     Foreground="Gray"
                                                     TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding ReceivedTime}"
                                                     FontSize="12"
                                                     Foreground="DarkGray"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </StackPanel>
        <TextBlock Text="æŽ¥æ”¶" FontSize="24" Name="StatusTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ContentDialog x:Name="TransferDialog"
              Title="æ–‡ä»¶æŽ¥æ”¶è¿›åº¦"
              PrimaryButtonText="éšè—"
              CloseButtonText="å…³é—­"
              DefaultButton="Close"
              Width="600">
            <StackPanel>
                <ListView ItemsSource="{x:Bind ActiveTransfers}" 
                 Height="300">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding FileName}" 
                                         FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding StatusMessage}"
                                         Foreground="Gray"
                                         FontSize="12"/>
                                    </StackPanel>

                                    <ProgressBar Grid.Column="1"
                                       Value="{Binding ProgressPercentage}"
                                       Minimum="0"
                                       Maximum="100"
                                       Height="20"/>
                                </Grid>
                                <TextBlock Text="{Binding ProgressText}"
                                 FontSize="12"
                                 Foreground="DarkGray"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            
        </ContentDialog>
    </Grid>
</Page>
